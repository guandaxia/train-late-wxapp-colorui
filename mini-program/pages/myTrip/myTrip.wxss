/* mini-program/pages/myTrip/myTrip.wxss */
 @import "../../template/empty/empty.wxss"; 

.trip-info {
  padding: 10rpx 10rpx 30rpx;

}

.trip-header {
  /* border-bottom: 1rpx solid #f1f1f1; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx 0;
  text-align: right;
}

.trip-number {
  font-size: 32;
  font-weight: 600;
}

.trip-date {
  margin-bottom: 10rpx;
}

.station-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  padding: 30rpx;
  color: #888;
  border-bottom: 1rpx solid #EEE;
}

.trip-status {
  position: relative;
  box-sizing: border-box;
  width: 180rpx;
  text-align: center;
  border-bottom: 5rpx solid #ccc;
}

.trip-status-text {
  font-size: 45rpx;
  color: #222;
}

.trip-status .i-train {
  font-size: 70rpx;
}

.jiantou {
  position: absolute;
  bottom: 0;
  right: -10rpx;
  width: 20rpx;
  height: 20rpx;
  border-bottom: 5rpx solid #ccc;
  transform: rotate(45deg);
}

.station-name {
  font-size: 36rpx;
  color: #222;
  margin-bottom: 10rpx;
}

.tips {
  padding: 10rpx 20rpx;
}

.train-detail {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}

.train-item-value {
  margin-top: 30rpx;
  color: #000;
  font-weight: 666;
}

.trip-footer {
  border-top: 1rpx solid #EEE;
  display: flex;
  justify-content: space-between;
  padding: 24rpx 30rpx;
}